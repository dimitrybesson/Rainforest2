<!DOCTYPE html>
<html>
<head>
  <title>Rainforest2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='userinfo'>
    <% if current_user  %>
      Welcome, <%= current_user.email %> <%= link_to 'Sign out', sessions_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign in', new_sessions_path %> | <%= link_to 'Sign up', new_users_path %>
    <% end %>
  </div>

  <% if flash.any? %>
      <% flash.each do |type, msg| %>
        <p><%= msg %></p>
      <% end %>
  <% end %>

  <%= yield %>

</body>
</html>
