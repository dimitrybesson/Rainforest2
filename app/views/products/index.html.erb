<h1>Products</h1>

<%= link_to 'Add a Product', new_product_path %>

<%= form_tag root_path, method: :get do %><br>
  <%= text_field_tag :search_value %>
  <%= submit_tag "Search" %>
<% end %>


<% @products.each do |product| %>
  <h2><%= link_to product.name, product_path(product) %> $<%= product.formatted_price %></h2>
  <p><%= product.description %></p>
  <p>
    <% product.categories.each do |category| %>
    <%= category.name %>
    <% end %>
  </p>
<% end %>
