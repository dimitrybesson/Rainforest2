<h1>Profile</h1>
<h2><%= current_user.name %></h2>
<p><%= current_user.email %></p>

<h3>Reviews by User: (<%= @user.reviews.count %>)</h3>

<% @user.reviews.each do |review| %>
  <blockquote>
    <p><%= review.product.name %> on <%= review.created_at.to_formatted_s(:long_ordinal) %></p>
    <p><%= review.comment %></p>
  </blockquote>
<% end %>
